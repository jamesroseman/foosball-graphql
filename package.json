{
  "name": "typescript-relay-boilerplate",
  "version": "0.0.1",
  "description": "Hello world boilerplate using a Typescript and GraphQL back-end, and a React and Relay front-end",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:be && npm run build:fe",
    "build:be": "cd server && gulp transpile && cd ..",
    "build:fe": "cd app && webpack --config config/webpack/webpack.config.js && cd ..",
    "build:schema": "cd server && gulp concat-schemas && cp dist/schema/schema.graphql ../ && cd ..",
    "clean": "npm run clean:be && npm run clean:fe",
    "clean:be": "rm -rf server/dist",
    "clean:fe": "rm -rf app/public/dist && rm -rf app/src/components/__generated__/ && rm -rf app/src/containers/__generated__/",
    "relay": "relay-compiler --src app/src/ --schema schema.graphql --extensions jsx",
    "start": "node server/dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch:fe": "npm run watch:relay & npm run watch:webpack",
    "watch:relay": "relay-compiler --src app/src/ --schema schema.graphql --extensions jsx --watch",
    "watch:webpack": "cd app && webpack --config config/webpack/webpack.config.js --watch --progress --colors --display-error-details && cd .."
  },
  "author": "James Roseman",
  "license": "MIT",
  "dependencies": {
    "@types/express-graphql": "0.0.33",
    "@types/graphql": "^0.9.1",
    "@types/react": "^15.0.29",
    "@types/react-dom": "^15.5.0",
    "@types/react-relay": "^0.9.12",
    "@types/react-router": "^4.0.11",
    "body-parser": "^1.15.2",
    "chalk": "^1.1.3",
    "debug": "^2.2.0",
    "express": "^4.14.0",
    "express-graphql": "^0.6.6",
    "graphql": "^0.10.1",
    "ip": "^1.1.5",
    "material-design-icons": "^3.0.1",
    "material-ui": "^0.18.3",
    "morgan": "^1.7.0",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-relay": "^1.0.0",
    "react-router": "^4.1.1",
    "react-tap-event-plugin": "^2.0.1"
  },
  "devDependencies": {
    "@types/body-parser": "0.0.33",
    "@types/debug": "0.0.29",
    "@types/express": "^4.0.33",
    "@types/morgan": "^1.7.32",
    "@types/node": "^6.0.46",
    "@types/react": "^15.0.29",
    "@types/react-hot-loader": "^3.0.1",
    "awesome-typescript-loader": "^3.1.3",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.0.0",
    "babel-plugin-relay": "^1.0.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-relay-plugin": "^0.11.0",
    "babel-relay-plugin-loader": "^0.11.0",
    "css-loader": "^0.28.4",
    "gulp": "^3.9.1",
    "gulp-concat": "^2.6.1",
    "gulp-typescript": "^3.1.1",
    "react-hot-loader": "^3.0.0-beta.2",
    "relay-compiler": "^1.0.0",
    "source-map-loader": "^0.2.1",
    "style-loader": "^0.18.2",
    "ts-loader": "^2.1.0",
    "typescript": "^2.3.4",
    "webpack": "^2.6.1",
    "webpack-dev-middleware": "^1.10.2",
    "webpack-dev-server": "^2.4.5",
    "webpack-hot-middleware": "^2.18.0",
    "webpack-notifier": "^1.5.0"
  }
}
