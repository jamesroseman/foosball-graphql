{
  "name": "typescript-relay-boilerplate",
  "version": "0.0.1",
  "description": "Hello world boilerplate using a Typescript and GraphQL back-end, and a React and Relay front-end",
  "main": "index.js",
  "scripts": {
    "build": "yarn run build:be && yarn run build:fe",
    "build:be": "cd server && gulp transpile && cd ..",
    "build:fe": "cd app && webpack --config config/webpack/webpack.config.js && cd ..",
    "clean": "yarn run clean:be && yarn run clean:fe",
    "clean:be": "rm -rf server/dist",
    "clean:fe": "rm -rf app/public/dist && rm -rf app/src/components/__generated__/ && rm -rf app/src/containers/__generated__/",
    "lint": "yarn run lint:be",
    "lint:be": "./node_modules/.bin/tslint --project 'server' -t stylish",
    "lint:fix": "yarn run lint:fix:be",
    "lint:fix:be": "./node_modules/.bin/tslint -c tslint.json --fix 'server'",
    "relay": "yarn run build:schema && cp server/dist/schema/schema.graphql app/ && relay-compiler --src app/ --schema app/schema.graphql --extensions jsx",
    "start": "node server/dist/index.js",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "watch:fe": "yarn run watch:relay & yarn run watch:webpack",
    "watch:relay": "relay-compiler --src app/src/ --schema schema.graphql --extensions jsx --watch",
    "watch:webpack": "cd app && webpack --config config/webpack/webpack.config.js --watch --progress --colors --display-error-details && cd .."
  },
  "author": "James Roseman",
  "license": "MIT",
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "server/tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/server/dist/"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.(ts|tsx|js)$"
  },
  "dependencies": {
    "@types/chalk": "^0.4.31",
    "@types/express-graphql": "0.0.33",
    "@types/graphql": "^0.9.1",
    "@types/ip": "0.0.30",
    "@types/react": "^15.0.29",
    "@types/react-dom": "^15.5.0",
    "@types/react-relay": "^0.9.12",
    "@types/react-router": "^4.0.11",
    "body-parser": "^1.15.2",
    "chalk": "^1.1.3",
    "debug": "^2.2.0",
    "express": "^4.14.0",
    "express-graphql": "^0.6.6",
    "graphql": "^0.10.1",
    "ip": "^1.1.5",
    "material-design-icons": "^3.0.1",
    "material-ui": "^0.18.3",
    "morgan": "^1.7.0",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-relay": "^1.0.0",
    "react-router": "^4.1.1",
    "react-tap-event-plugin": "^2.0.1"
  },
  "devDependencies": {
    "@types/body-parser": "0.0.33",
    "@types/debug": "0.0.29",
    "@types/express": "^4.0.33",
    "@types/jest": "^20.0.8",
    "@types/morgan": "^1.7.32",
    "@types/node": "^6.0.46",
    "@types/react": "^15.0.29",
    "@types/react-hot-loader": "^3.0.1",
    "@types/supertest": "^2.0.3",
    "awesome-typescript-loader": "^3.1.3",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.0.0",
    "babel-plugin-relay": "^1.0.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-relay-plugin": "^0.11.0",
    "babel-relay-plugin-loader": "^0.11.0",
    "css-loader": "^0.28.4",
    "graphql-code-generator": "^0.8.10",
    "graphql-to-json": "^1.1.2",
    "graphql-tools": "^1.2.2",
    "gulp": "^3.9.1",
    "gulp-concat": "^2.6.1",
    "gulp-typescript": "^3.1.1",
    "http": "0.0.0",
    "jest": "^21.1.0",
    "react-hot-loader": "^3.0.0-beta.2",
    "relay-compiler": "^1.0.0",
    "source-map-loader": "^0.2.1",
    "style-loader": "^0.18.2",
    "supertest": "^3.0.0",
    "ts-jest": "^21.0.1",
    "ts-loader": "^2.1.0",
    "tslint": "^5.7.0",
    "typescript": "^2.3.4",
    "webpack": "^2.6.1",
    "webpack-dev-middleware": "^1.10.2",
    "webpack-dev-server": "^2.4.5",
    "webpack-hot-middleware": "^2.18.0",
    "webpack-notifier": "^1.5.0"
  }
}
